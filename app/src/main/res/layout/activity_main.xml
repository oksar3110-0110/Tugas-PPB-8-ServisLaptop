<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oksareinaldi.abah.servislaptop.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SERVIS LAPTOP"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"/>
        <TableLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">

            <TableRow>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <EditText
                        android:id="@+id/Etnama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama"
                        android:maxLines="1"
                        android:ems="10"
                        />
                </android.support.design.widget.TextInputLayout>
            </TableRow>
            <TableRow>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:id="@+id/Kota"
                        android:layout_marginTop="10dp"
                        android:hint="Kota"
                        android:maxLines="1"
                        android:ems="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>
            <TableRow>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:id="@+id/Brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ems="10"
                        android:hint="Merk / Brand"
                        android:layout_marginBottom="10dp"
                        />

                </android.support.design.widget.TextInputLayout>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingRight="4dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="KERUSAKAN" />
                <Spinner
                    android:id="@+id/spinRusak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:drawSelectorOnTop="true"
                    android:spinnerMode="dialog" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Di terima servis pada :"
                    android:layout_marginTop="10dp"
                    />
            </TableRow>
            <TableRow>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/EttglTer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tanggal"
                        android:editable="false"
                        android:maxLines="1"
                        android:layout_marginTop="10dp"/>
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:id="@+id/putTanggalTer"
                    android:layout_marginLeft="30dp"
                    android:background="@color/colorAccent"
                    android:text="Tanggal"
                    />
            </TableRow>
            <TableRow>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/EtJamTer"
                        android:editable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Jam Penerimaan"
                        android:maxLines="1"
                        android:layout_marginTop="10dp"/>
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:id="@+id/putJamTer"
                    android:paddingTop="10dp"
                    android:width="10dp"
                    android:height="9dp"
                    android:layout_marginLeft="30dp"
                    android:background="@color/colorAccent"
                    android:text="Jam"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Selesai pada :"
                    android:layout_marginTop="10dp"
                    />
            </TableRow>
            <TableRow>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/EtTanggal"
                        android:editable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tanggal"
                        android:maxLines="1"
                        android:layout_marginTop="10dp"/>
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:id="@+id/putTanggal"
                    android:layout_marginLeft="30dp"
                    android:background="@color/colorAccent"
                    android:text="Tanggal"
                    />
            </TableRow>
            <TableRow>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/EtJam"
                        android:editable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Jam Pengambilan"
                        android:maxLines="1"
                        android:layout_marginTop="10dp"/>
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:id="@+id/putJam"
                    android:background="@color/colorAccent"
                    android:text="Jam"
                    android:paddingTop="10dp"
                    android:width="10dp"
                    android:height="9dp"
                    android:layout_marginLeft="30dp" />
            </TableRow>
            <Button
                android:id="@+id/Btsend"
                android:text="KIRIM DATA"
                android:layout_marginTop="15dp"/>
        </TableLayout>
    </LinearLayout>

</ScrollView>

